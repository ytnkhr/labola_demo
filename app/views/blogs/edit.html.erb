<h1>ブログを編集する</h1>
<hr>
<%= form_for @blog do |f| %>
  <p>タイトル（必須）</p>
  <%= f.text_field :title, :class => "form-control my-form" %>
  <br>
  <p>内容</p>
  <%= f.text_area :content, :class => "form-control my-form" %>
  <br>
  <p>公開設定</p>
    <%= f.select :blog_published, {"公開" => "p", "会員公開" => "m", "友達公開" => "f", "非公開" => "c"} %>
  <hr>
  <%= f.submit "ブログを編集する", :class => "btn btn-primary" %>
<% end %>
